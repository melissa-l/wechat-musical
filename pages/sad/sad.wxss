.musical {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 330px;
}
.last {
  width: 100rpx; 
  height: 100rpx;
}
.go {
  transform: rotateY(180deg);
  width: 100rpx; 
  height: 100rpx;
}
.name {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
}
.picture {
  position: relative;
}
.picture .index {
  width: 500rpx; 
  height: 500rpx; 
  background-color: #eeeeee;
  border-radius: 50%;
  border: 15rpx solid #c0c0c0;
}
.picture .icon {
  position: absolute;
  top: 40%;
  left: 40%;
  opacity: 0.8; 
  height: 120rpx; 
  width: 120rpx
}
.toast {
  position: absolute;
  left: 125rpx;
  bottom: 80rpx;
  height: 80rpx;
  width: 500rpx;
  background: black;
  color: white;
  border-radius: 10rpx;
  line-height: 80rpx;
  text-align: center;
  opacity: 0.3; 
}
.lyric {
  height: 200rpx;
  overflow-x: hidden;
  overflow-y: scroll;
  margin-top: 50rpx;
}
.lyric::-webkit-scrollbar {
  display:none
}
.lyric p{
  display: block;
  margin-top: 10rpx;
}
@keyframes whirl {
	from {transform:rotate(0);}
	to {transform:rotate(360deg);}
}